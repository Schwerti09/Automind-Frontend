<script lang="ts">
  import { onMount } from 'svelte';
  import { checkLicenseStatus } from '$lib/api';

  let licenseKey = '';
  let result: { valid: boolean; tier: string | null } | null = null;
  let loading = false;

  async function verifyKey() {
    loading = true;
    result = await checkLicenseStatus(licenseKey.trim());
    loading = false;
  }
</script>

<style>
  .container {
    max-width: 600px;
    margin: auto;
