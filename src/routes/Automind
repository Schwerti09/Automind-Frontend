  />

  <button class="btn" on:click={verifyKey} disabled={loading}>
    {loading ? 'Pr√ºfe...' : 'Lizenz pr√ºfen'}
  </button>

  {#if result}
    <div class="result">
      {#if result.valid}
        ‚úÖ Lizenz g√ºltig ‚Äì Zugriffsstufe: <strong>{result.tier}</strong>
